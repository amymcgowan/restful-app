<%- include("partials/header") %>

<h1>Add New Tutorial</h1>

<form action="/tutorials" method="POST">
    <div class="form-group">
        <label">Title</label>
        <input type="text" name="tutorial[title]">
    </div>
    <div class="form-group">
        <label>Video ID</label>
        <input type="text" name="tutorial[videoID]">
    </div>
    <div class="form-group">
        <label>Image Link</label>
        <input type="text" name="tutorial[imageLink]">
    </div>
    <div class="form-group">
        <label>Video Link</label>
        <input type="text" name="tutorial[videoLink]">
    </div>
    <div class="form-group">
        <label>Colors/Materials</label>
        <textarea name="tutorial[colors]" cols="30" rows="5"></textarea>
    </div>
    <button type="submit">Submit</button>
</form>

<%- include("partials/footer") %>